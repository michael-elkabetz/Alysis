{
  "name": "alysis-backend",
  "version": "1.0.0",
  "description": "Alysis - AI Analysis Platform Backend API",
  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run src/db/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.33.1",
    "@elysiajs/cors": "^1.2.0",
    "@elysiajs/static": "^1.2.0",
    "@elysiajs/swagger": "^1.2.1",
    "@google/genai": "^1.34.0",
    "drizzle-orm": "^0.38.3",
    "elysia": "^1.2.25",
    "nanoid": "^5.0.9",
    "openai": "^4.77.0",
    "postgres": "^3.4.5",
    "zod": "^3.24.1"
  },
    "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.30.1",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=22",
    "bun": ">=1.3.5"
  }
}
